<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardBackgroundColor="@color/white1">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgPost1"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="10dp" />

        <TextView
            android:id="@+id/tvCaption1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgPost1"
            android:layout_margin="10dp"
            android:hint="caption"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tvContact1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvCaption1"
            android:layout_margin="10dp"
            android:hint="contact"
            android:textSize="22sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_below="@id/tvContact1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnUpdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvContact1"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="Update"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnUpdate"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="Delete"
                android:backgroundTint="@color/black"
                android:textSize="18sp" />
        </LinearLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>